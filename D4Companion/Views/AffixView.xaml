                                                    <Label ToolTip="{loc:LocExtension rsTooltipSeasonal}" Padding="0"
                                                           Visibility="{Binding Path=IsSeasonal, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                                                        <Image Height="20" Source="/Images/aspect_seasonal.png"/>
                                                    </Label>
                                                    <Label ToolTip="{loc:LocExtension rsTooltipDropOnly}" Padding="0"
                                                           Visibility="{Binding Path=IsDropOnly, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                                                        <Image Height="20" Source="/Images/aspect_drop.png"/>
                                                    </Label>
                                                </StackPanel>
                                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" ToolTip="{loc:LocExtension rsTooltipSetAspect}"
                                                            Command="{Binding Path=DataContext.SetAspectCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}">
                                                        <iconPacks:PackIconMaterial Width="15" Height="15" Kind="PlusThick" />
                                                    </Button>
                                                </StackPanel>
                                                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10 0 10 5">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="LightGray" FontSize="15" >
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding Command="{Binding Path=DataContext.SetAspectCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}" MouseAction="LeftDoubleClick" />
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Description}" ToolTip="{Binding Description}" TextWrapping="Wrap" Foreground="LightGray" FontSize="15">
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding Command="{Binding Path=DataContext.SetAspectCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}" MouseAction="LeftDoubleClick" />
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="{loc:LocExtension rsCapSigils}">
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding SigilsFiltered}" >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <Grid>
                                        <Border Width="300" Height="130" CornerRadius="5" Margin="5" Background="#333333">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1"/>
                                            </Border.Effect>
                                        </Border>
                                        <Border Width="300" Height="130" CornerRadius="5" Margin="5" Background="#333333">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Button BorderThickness="0" Content="{Binding Tier}" Foreground="Red" FontWeight="Bold" 
                                                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                                            ToolTip="{loc:LocExtension rsTooltipSetSigil}"
                                                            Visibility="{Binding Path=IsTierInfoEnabled, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}"
                                                            Command="{Binding Path=DataContext.SetSigilDungeonTierToNextCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}">
                                                        <Button.ContextMenu>
                                                            <ContextMenu ItemsSource="{Binding Tiers}" >
                                                                <ContextMenu.ItemContainerStyle>
                                                                    <Style TargetType="MenuItem">
                                                                        <Setter Property="Command" Value="{Binding Path=DataContext.SetSigilDungeonTierCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                                        <Setter Property="CommandParameter" Value="{Binding}"/>
                                                                    </Style>
                                                                </ContextMenu.ItemContainerStyle>
                                                            </ContextMenu>
                                                        </Button.ContextMenu>
                                                    </Button>
                                                    <Label ToolTip="{loc:LocExtension rsTooltipIsSeasonal}" Padding="0" VerticalAlignment="Center"
                                                           Visibility="{Binding Path=IsSeasonal, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                                                        <Image Height="20" Source="/Images/aspect_seasonal.png"/>
                                                    </Label>
                                                </StackPanel>

                                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" ToolTip="{loc:LocExtension rsTooltipSetSigil}"
                                                            Command="{Binding Path=DataContext.SetSigilCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}">
                                                        <iconPacks:PackIconMaterial Width="15" Height="15" Kind="PlusThick" />
                                                    </Button>
                                                </StackPanel>
                                                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10 0 10 5">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="LightGray" FontSize="15" >
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding Command="{Binding Path=DataContext.SetSigilCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}" MouseAction="LeftDoubleClick" />
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Description}" ToolTip="{Binding Description}" TextWrapping="Wrap" Foreground="LightGray" FontSize="15">
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding Command="{Binding Path=DataContext.SetSigilCommand, RelativeSource={RelativeSource AncestorType={x:Type local:AffixView}}}" CommandParameter="{Binding}" MouseAction="LeftDoubleClick" />
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

            </TabControl>

        </DockPanel>
    </Grid>
</UserControl>
